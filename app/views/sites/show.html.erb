<% provide(:title, @site.partyname)%>
<div class="row">
  <aside class="span4">
    <section>
		<h1>
			<%= @site.partyname%>
		</h1>
		<p>
		
		Party ID: <%= @site.partynumber%>
		<p>
		
		<p>	<%= @site.address1 %> </p>
		<p>	<%= @site.address2 %> </p>
		<p>	<%= @site.address3 %> </p>
		<p>	<%= @site.postalcode %> <%= @site.city %> </p>
		<p>
		<p>	<%= @primary.first.cname %> </p>
		<p>	<%= mail_to @primary.first.cemail %> </p>
		<p>	<%= @primary.first.cphone %> </p>
    </section>
	
	
  </aside>
  
  <hlist class="span12">
    	<section>
   <h1>Hardware</h1>
   <p>
  <table class="table table-striped">
    <tr>
      <th>Serial</th>
      <th>Description</th>
    </tr>
 
  <% @parts.each do |part| %>
    <tr>
      <td><%= link_to part.serialnumber, part %></td>
      <td><%= part.family %> <%= part.partdescription %></td>
    </tr>
  <% end %>
  </table>
  
  <p>
	    <h1>Contacts</h1>
		<p>
	  <table class="table table-striped">
	    <tr>

	      <th>Name</th>
	  	<th>eMail</th>
	  	<th>Phone</th>
		<th>Type</th>
	    </tr>
 
	  <% @contacts.each do |contact| %>
	    <tr>
	     
	      <td><%= contact.cname %></td>
	  	<td><%= mail_to contact.cemail %></td>
	  	<td><%= contact.cphone %></td>
		<td><%= contact.ckind %></td>
	    </tr>
	  <% end %>
	  </table>
	  
	 
</section>
</hlist>
</div>
